@{
    ViewData["Title"] = "√úretim Fi≈üleri";
}

<div class="container mt-4">
    <h2 class="mb-4">üè≠ √úretim Fi≈üleri</h2>

    <table id="finishedTable" class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Fi≈ü No</th>
                <th>Tarih</th>
                <th>Depo</th>
                <th>Malzeme</th>
                <th>Miktar</th>
                <th>Birim</th>
                <th>ƒ∞≈ülem</th>
            </tr>
        </thead>
        <tbody>
            <tr><td colspan="7" class="text-center">Y√ºkleniyor...</td></tr>
        </tbody>
    </table>
</div>

<!-- Detay Modal -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">üìã Fi≈ü Detayƒ±</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="detailInfo" class="mb-3 p-2 bg-light small"></div>
                <table class="table table-bordered">
                    <thead class="table-warning">
                        <tr>
                            <th>#</th>
                            <th>Stok Kodu</th>
                            <th>Depo</th>
                            <th>Miktar</th>
                            <th>BG Tip</th>
                            <th>Seri</th>
                        </tr>
                    </thead>
                    <tbody id="detailTableBody">
                        <tr><td colspan="6" class="text-center">Y√ºkleniyor...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", async () => {
    const tbody = document.querySelector("#finishedTable tbody");

    // Liste y√ºkle
    async function loadList() {
        tbody.innerHTML = "<tr><td colspan='7' class='text-center'>Y√ºkleniyor...</td></tr>";
        try {
            const res = await fetch("/FinishedGoods/GetAll");
            const json = await res.json();
            const data = json.data || [];
            
            tbody.innerHTML = "";
            if (data.length === 0) {
                tbody.innerHTML = "<tr><td colspan='7' class='text-center text-muted'>Kayƒ±t bulunamadƒ±</td></tr>";
                return;
            }

            data.forEach(x => {
                tbody.innerHTML += `
                    <tr data-id="${x.fisNo}">
                        <td>${x.fisNo}</td>
                        <td>${x.tarih}</td>
                        <td>${x.depo}</td>
                        <td>${x.malzeme}</td>
                        <td>${x.miktar}</td>
                        <td>${x.birim}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-warning detail">üîç</button>
                        </td>
                    </tr>`;
            });
        } catch (err) {
            tbody.innerHTML = "<tr><td colspan='7' class='text-center text-danger'>Hata: " + err.message + "</td></tr>";
        }
    }

    await loadList();

    // Detay modal
    document.addEventListener("click", async e => {
        if (e.target.classList.contains("detail")) {
            const id = e.target.closest("tr").dataset.id;
            const modal = new bootstrap.Modal("#detailModal");
            modal.show();

            const detailBody = document.getElementById("detailTableBody");
            const detailInfo = document.getElementById("detailInfo");
            detailBody.innerHTML = "<tr><td colspan='6' class='text-center'>Y√ºkleniyor...</td></tr>";

            try {
                const res = await fetch(`/FinishedGoods/Detail/${id}`);
                const json = await res.json();
                
                if (!json.success) {
                    detailBody.innerHTML = `<tr><td colspan='6' class='text-center text-danger'>${json.message}</td></tr>`;
                    return;
                }

                const data = json.data;
                detailInfo.innerHTML = `
                    <strong>Fi≈ü No:</strong> ${data.uretSon_FisNo} |
                    <strong>Tarih:</strong> ${data.uretSon_Tarih} |
                    <strong>Mamul:</strong> ${data.uretSon_Mamul} |
                    <strong>Miktar:</strong> ${data.uretSon_Miktar} |
                    <strong>Depo:</strong> ${data.uretSon_Depo}
                `;

                const kalemler = data.kalem || [];
                if (kalemler.length === 0) {
                    detailBody.innerHTML = "<tr><td colspan='6' class='text-center text-muted'>Kalem bulunamadƒ±</td></tr>";
                    return;
                }

                detailBody.innerHTML = "";
                kalemler.forEach(k => {
                    detailBody.innerHTML += `
                        <tr>
                            <td>${k.index}</td>
                            <td>${k.stokKodu}</td>
                            <td>${k.depoKodu}</td>
                            <td class="editable-qty" data-stok="${k.stokKodu}">${k.miktar}</td>
                            <td>${k.bGTIP}</td>
                            <td>${k.seriVarMi ? "‚úÖ" : "‚ùå"}</td>
                        </tr>`;
                });
            } catch (err) {
                detailBody.innerHTML = "<tr><td colspan='6' class='text-center text-danger'>Hata!</td></tr>";
            }
        }
    });

    // Miktar d√ºzenle (double click)
    document.addEventListener("dblclick", async e => {
        const td = e.target.closest("td");
        if (!td || !td.classList.contains("editable-qty") || td.querySelector("input")) return;

        const original = td.textContent.trim();
        const input = document.createElement("input");
        input.type = "number";
        input.step = "0.001";
        input.value = original;
        input.className = "form-control form-control-sm";
        td.innerHTML = "";
        td.appendChild(input);
        input.focus();

        input.addEventListener("blur", async () => {
            const newValue = parseFloat(input.value) || 0;
            td.textContent = newValue.toFixed(3);

            const tr = td.closest("tr");
            const cells = tr.querySelectorAll("td");
            const fisNo = document.querySelector("#detailInfo").textContent.match(/Fi≈ü No:\s*(\d+)/)?.[1] || "";

            const dto = {
                fisNo,
                index: parseInt(cells[0].textContent.trim()),
                stokKodu: cells[1].textContent.trim(),
                depoKodu: parseInt(cells[2].textContent.trim()),
                miktar: newValue,
                bGTIP: cells[4].textContent.trim(),
                seriVarMi: cells[5].textContent.includes("‚úÖ"),
                aciklama: ""
            };

            try {
                const res = await fetch("/FinishedGoods/UpdateQuantity", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(dto)
                });

                const json = await res.json();
                if (json.success) {
                    td.style.backgroundColor = "#d4edda";
                } else {
                    td.style.backgroundColor = "#f8d7da";
                    alert("‚ùå G√ºncelleme ba≈üarƒ±sƒ±z: " + (json.message || "Hata"));
                }
                setTimeout(() => td.style.backgroundColor = "", 1500);
            } catch (err) {
                td.style.backgroundColor = "#f8d7da";
                setTimeout(() => td.style.backgroundColor = "", 1500);
            }
        });
    });
});
</script>
}
